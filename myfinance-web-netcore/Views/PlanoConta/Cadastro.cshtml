@model PlanoContaModel

@{
  ViewData["Title"] = "Cadastro de Plano de Contas";
}

<h1>@ViewData["Title"]</h1>

<form asp-controller="PlanoConta" asp-action="Cadastro" method="post">
  <div class="container">
    <div class="mb-3">
      <label class="form-label">Descrição</label>
      <input type="hidden" class="form-control" id="Id" asp-for="Id" />
      <input type="text" class="form-control" id="Descricao" asp-for="Descricao" />
    </div>

    <div class="mb-3">
      <label class="form-label">Tipo</label> <br>
      <label>@Html.RadioButtonFor(m => m.Tipo, "D") Despesa</label>
      <label>@Html.RadioButtonFor(m => m.Tipo, "R") Receita</label>
    </div>

    <div>
      <a role="button" href="/PlanoConta/Index" type="button" class="btn btn-secondary">Cancelar</a>
      <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
  </div>
</form>

